<div class="append-area container">
    {{#each data}}
    <div class="panel">
        <div class="panel-heading" id="panel-heading-saved">
            <h3>
                <a class="article-link" target="_blank" href="http://{{redditLink}}">{{title}}</a>
            </h3>
            <div class="delete-note-div row">
                <div class="col-sm-12 col-md-6">
                    <a class="btn btn-danger delete" onclick="deleteArticle('{{_id}}')">Delete Article</a>
                </div>
                <div class="col-sm-12 col-md-6">
                    <a class="btn btn-info notes" onclick="articleNotes('{{_id}}', '{{title}}')">Article Notes</a>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <a href="http://www.reddit.com/r/{{subReddit}}" target="_blank">Subreddit: r/{{subReddit}}</a>
            {{#if externalLink}}
                <br>
                <a href="{{externalLink}}" target="_blank">Link to Reference</a>
            {{/if}}
        </div>
    </div>
    {{/each}}

